{
    "compilerOptions": {
        "lib": ["esnext", "dom"],
        "target": "ES2022",
        "moduleResolution": "NodeNext",
        "module": "NodeNext",

        "importHelpers": true,
        "baseUrl": ".",
        "strict": true,
        // "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "types": ["node"],
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "noImplicitAny": false,
        "rootDir": ".",
        "sourceMap": true
    },
    "include": [
        "src/**/*.ts", 
        "src/**/*.js", 
        "src/**/*.hl",
        "lib/**/*.ts", 
        "lib/**/*.js", 
    ],
    "exclude": ["**/node_modules/"]
}
